@model HomeVM
@foreach (Product item in Model.Products)
{
     <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@foreach (var category in Model.DataCategory)
                                                                    {
                                                                     @(category.Name.ToLower()+" ")
                                                                    }">
                            <div class="img">
                                <a href="">
                                    <img src="~/img/@item.Image" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@item.Price.ToString("0.00")</span>
                            </div>
                        </div>
                    </div>
}